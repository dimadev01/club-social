{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node-terminal",
      "request": "launch",
      "name": "maildev",
      "command": "meteor npm run maildev"
    },
    {
      "type": "node-terminal",
      "request": "launch",
      "name": "meteor",
      "command": "meteor npm start"
    },
    {
      "type": "node-terminal",
      "request": "launch",
      "name": "meteor:ip",
      "command": "meteor npm run start:ip"
    }
  ],
  "compounds": [
    {
      "name": "app",
      "configurations": ["meteor", "maildev"]
    },
    {
      "name": "app:ip",
      "configurations": ["meteor:ip", "maildev"]
    }
  ]
}
