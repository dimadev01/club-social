  "version": "0.2.0",
  "configurations": [
    {
      "name": "Api",
      "request": "launch",
      "cwd": "${workspaceFolder}/apps/api",
      "type": "node",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "start:dev"],
      "console": "integratedTerminal"
    },
    {
      "name": "Web",
      "request": "launch",
      "cwd": "${workspaceFolder}/apps/web",
      "type": "node",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "dev"],
      "console": "integratedTerminal"
    },
    {
      "name": "Shared",
      "request": "launch",
      "cwd": "${workspaceFolder}/packages/shared",
      "type": "node",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "dev"],
      "console": "integratedTerminal"
    }
  ],
  "compounds": [
    {
      "name": "Api & Web",
      "configurations": ["Api", "Web", "Shared"]
    }
  ]
}
