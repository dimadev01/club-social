{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "preset": "ts-jest",
  "extensionsToTreatAsEsm": [".ts"],
  "moduleNameMapper": {
    "^@/(.*)$": "<rootDir>/../src/$1",
    "^@/test/(.*)$": "<rootDir>/$1"
  },
  "transform": {
    "^.+\\.tsx?$": [
      "ts-jest",
      {
        "useESM": true,
        "tsconfig": {
          "baseUrl": "..",
          "paths": {
            "@/test/*": ["test/*"],
            "@/*": ["./src/*"]
          },
          "module": "ES2020",
          "target": "ES2020"
        }
      }
    ]
  }
}
