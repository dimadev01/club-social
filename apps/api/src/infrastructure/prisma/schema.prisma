generator client {
  provider     = "prisma-client"
  output       = "./generated"
  moduleFormat = "cjs"
}

datasource db {
  provider = "postgresql"
}

enum Role {
  ADMIN
  STAFF
  MEMBER
}

model User {
  id        String  @id
  authId    String?
  email     String  @unique
  firstName String
  lastName  String
  role      Role

  createdAt DateTime
  createdBy String
  deletedAt DateTime?
  deletedBy String?
  isDeleted Boolean
  updatedAt DateTime
  updatedBy String

  @@index([email])
  @@index([authId])
}
