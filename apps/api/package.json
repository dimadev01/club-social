{
  "name": "@club-social/api",
  "version": "0.0.1",
  "private": true,
  "description": "",
  "license": "UNLICENSED",
  "author": "Dmitriy Mironov",
  "scripts": {
    "build": "nest build && npm run sentry:sourcemaps",
    "check-types": "tsc --noEmit",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "prisma:generate": "prisma generate --schema src/infrastructure/prisma/schema.prisma",
    "prisma:migrate": "dotenvx run -- prisma migrate deploy --config src/infrastructure/prisma/prisma.config.ts --schema src/infrastructure/prisma/schema.prisma",
    "prisma:new": "dotenvx run -- prisma migrate dev --config src/infrastructure/prisma/prisma.config.ts --schema src/infrastructure/prisma/schema.prisma",
    "prisma:new:create-only": "dotenvx run -- prisma migrate dev --config src/infrastructure/prisma/prisma.config.ts --schema src/infrastructure/prisma/schema.prisma --create-only",
    "prisma:reset": "dotenvx run -- prisma migrate reset --config src/infrastructure/prisma/prisma.config.ts --schema src/infrastructure/prisma/schema.prisma",
    "sentry:sourcemaps": "sentry-cli sourcemaps inject --org dimadev --project club-social ./dist && sentry-cli sourcemaps upload --org dimadev --project club-social ./dist",
    "start": "nest start",
    "start:debug": "nest start --debug --watch",
    "start:dev": "nest start --watch",
    "start:prod": "node dist/main",
    "supabase:generate": "supabase gen types --lang typescript --local > src/infrastructure/supabase/supabase.types.ts",
    "test": "jest",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "test:watch": "jest --watch"
  },
  "jest": {
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testEnvironment": "node",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    }
  },
  "dependencies": {
    "@dotenvx/dotenvx": "^1.51.1",
    "@logtail/node": "^0.5.6",
    "@logtail/winston": "^0.5.6",
    "@nestjs/common": "^11.0.1",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.0.1",
    "@nestjs/event-emitter": "^3.0.1",
    "@nestjs/platform-express": "^11.0.1",
    "@nestjs/swagger": "^11.2.3",
    "@prisma/adapter-pg": "^7.0.0",
    "@prisma/client": "^7.0.0",
    "@sentry/cli": "^2.58.2",
    "@sentry/nestjs": "^10.27.0",
    "@sentry/profiling-node": "^10.27.0",
    "@supabase/supabase-js": "^2.85.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.3",
    "nest-winston": "^1.10.2",
    "neverthrow": "^8.2.0",
    "pg": "^8.16.3",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "winston": "^3.18.3"
  },
  "devDependencies": {
    "@club-social/eslint-config": "*",
    "@club-social/prettier-config": "*",
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.18.0",
    "@nestjs/cli": "^11.0.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.1",
    "@types/express": "^5.0.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^22.19.1",
    "@types/pg": "^8.15.6",
    "@types/supertest": "^6.0.2",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.2",
    "globals": "^16.0.0",
    "jest": "^30.0.0",
    "prettier": "3.6.2",
    "prisma": "^7.0.0",
    "source-map-support": "^0.5.21",
    "supabase": "^2.62.5",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.20.0"
  }
}
