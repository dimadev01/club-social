{
  "name": "@club-social/api",
  "version": "0.4.1",
  "private": true,
  "description": "",
  "license": "UNLICENSED",
  "author": "Dmitriy Mironov <dima.dev@icloud.com>",
  "scripts": {
    "better-auth:generate": "npx @better-auth/cli@latest generate --config src/infrastructure/auth/better-auth/better-auth.service.ts",
    "build": "nest build",
    "build:sourcemaps": "nest build && npm run sentry:sourcemaps",
    "check-types": "tsc --noEmit",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "generate-schema": "prisma generate --schema src/infrastructure/database/prisma/schema.prisma",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "migrate": "prisma migrate deploy --config src/infrastructure/database/prisma/prisma.config.ts --schema src/infrastructure/database/prisma/schema.prisma",
    "migrate:local": "dotenvx run -- prisma migrate deploy --config src/infrastructure/database/prisma/prisma.config.ts --schema src/infrastructure/database/prisma/schema.prisma",
    "new-migration": "dotenvx run -- prisma migrate dev --config src/infrastructure/database/prisma/prisma.config.ts --schema src/infrastructure/database/prisma/schema.prisma",
    "new-migration:create-only": "dotenvx run -- prisma migrate dev --create-only --config src/infrastructure/database/prisma/prisma.config.ts --schema src/infrastructure/database/prisma/schema.prisma",
    "reset-database": "dotenvx run -- prisma migrate reset --config src/infrastructure/database/prisma/prisma.config.ts --schema src/infrastructure/database/prisma/schema.prisma",
    "sentry:sourcemaps": "sentry-cli sourcemaps inject --org dimadev --project club-social ./dist && sentry-cli sourcemaps upload --org dimadev --project club-social ./dist",
    "start": "nest start",
    "start:debug": "dotenvx run -- nest start --debug --watch",
    "start:dev": "dotenvx run -- nest start --watch",
    "start:prod": "node dist/src/main",
    "test": "jest",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "test:watch": "jest --watch"
  },
  "dependencies": {
    "@better-auth/passkey": "^1.4.10",
    "@club-social/shared": "^0.0.1",
    "@dotenvx/dotenvx": "^1.51.4",
    "@faker-js/faker": "^9.9.0",
    "@itgorillaz/configify": "^4.0.2",
    "@nestjs/bullmq": "^11.0.4",
    "@nestjs/cache-manager": "^3.1.0",
    "@nestjs/common": "^11.1.11",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.1.11",
    "@nestjs/event-emitter": "^3.0.1",
    "@nestjs/jwt": "^11.0.2",
    "@nestjs/platform-express": "^11.1.11",
    "@nestjs/swagger": "^11.2.3",
    "@prisma/adapter-pg": "^7.2.0",
    "@prisma/client": "^7.2.0",
    "@sentry/cli": "^3.0.1",
    "@sentry/nestjs": "^10.32.1",
    "@sentry/profiling-node": "^10.32.1",
    "better-auth": "^1.4.10",
    "bullmq": "^5.66.4",
    "cache-manager": "^7.2.7",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.3",
    "es-toolkit": "^1.43.0",
    "ioredis": "^5.8.2",
    "nest-winston": "^1.10.2",
    "nestjs-cls": "^6.1.0",
    "neverthrow": "^8.2.0",
    "nodemailer": "^7.0.12",
    "p-limit": "^7.2.0",
    "pg": "^8.16.3",
    "pino-http": "^11.0.0",
    "pino-pretty": "^13.1.3",
    "reflect-metadata": "^0.2.2",
    "resend": "^6.6.0",
    "rxjs": "^7.8.2",
    "winston": "^3.19.0"
  },
  "devDependencies": {
    "@better-auth/cli": "^1.4.10",
    "@club-social/eslint-config": "*",
    "@club-social/prettier-config": "*",
    "@eslint/eslintrc": "^3.3.3",
    "@eslint/js": "^9.39.2",
    "@golevelup/ts-jest": "^1.1.1",
    "@nestjs/cli": "^11.0.14",
    "@nestjs/schematics": "^11.0.9",
    "@nestjs/testing": "^11.1.11",
    "@types/express": "^5.0.6",
    "@types/ioredis": "^4.28.10",
    "@types/jest": "^30.0.0",
    "@types/node": "^25.0.3",
    "@types/nodemailer": "^7.0.4",
    "@types/pg": "^8.16.0",
    "@types/supertest": "^6.0.3",
    "eslint": "^9.39.2",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "globals": "^16.5.0",
    "jest": "^30.2.0",
    "prettier": "3.7.4",
    "prisma": "^7.2.0",
    "source-map-support": "^0.5.21",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.6",
    "ts-loader": "^9.5.4",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.51.0"
  }
}
